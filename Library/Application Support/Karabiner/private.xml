<?xml version="1.0"?>
<root>
  <item>
    <identifier>remap.cmdptocmdo</identifier>
    <name>Command+P to Command+O</name>
    <autogen>
      __KeyToKey__
      KeyCode::P, ModifierFlag::COMMAND_L | ModifierFlag::NONE,
      KeyCode::O, ModifierFlag::COMMAND_L,
    </autogen>
  </item>

  <item>
    <identifier>remap.swapcolonsus</identifier>
    <name>Swap semicolon and colon in US layout</name>
    <inputsource_not>RUSSIAN</inputsource_not>
    <!-- change shift+; to ; -->
    <autogen>
      __KeyToKey__
      KeyCode::SEMICOLON, MODIFIERFLAG_EITHER_LEFT_OR_RIGHT_SHIFT,
      KeyCode::SEMICOLON,
    </autogen>
    <!-- change ; to shift+; -->
    <autogen>
      __KeyToKey__
      KeyCode::SEMICOLON,
      KeyCode::SEMICOLON, ModifierFlag::SHIFT_L,
    </autogen>
  </item>

  <item>
    <name>Command_L to Command_L</name>
    <appendix>(+ When you type Command_L only, change Input Source to Russian)</appendix>
    <identifier>remap.russian_commandL2commandL_russian</identifier>
    <autogen>__KeyOverlaidModifier__ KeyCode::COMMAND_L, KeyCode::COMMAND_L, KeyCode::VK_CHANGE_INPUTSOURCE_RUSSIAN</autogen>
  </item>
  <item>
    <name>Command_R to Command_R</name>
    <appendix>(+ When you type Command_R only, change Input Source to English)</appendix>
    <identifier>remap.russian_commandR2commandR_english</identifier>
    <autogen>__KeyOverlaidModifier__ KeyCode::COMMAND_R, KeyCode::COMMAND_R, KeyCode::VK_CHANGE_INPUTSOURCE_ENGLISH</autogen>
  </item>
</root>
