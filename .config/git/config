[user]
  name = Phil Pirozhkov
  email = pirjsuka@gmail.com
[github]
  user = pirj
[push]
  default = current
[pull]
  default = tracking
  ff = only
  rebase = true
[rebase]
  autostash = true
  autosquash = true
[merge]
  tool = vimdiff
[diff]
  tool = icdiff
[difftool]
  prompt = false
[difftool "icdiff"]
  cmd = icdiff --highlight --line-numbers --numlines=3 $LOCAL $REMOTE
[pager]
  difftool = less
[color]
  ui = true
[core]
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
[format]
  pretty = %h %ai %aN %d %s %N
  graph = true
[log]
  abbrevCommit = true
  date = iso
[branch]
  autosetupmerge = true
[alias]
  co = checkout
  s = status -sb
  d = difftool
  ds = diff --staged
  up = pull
  c = commit
  ca = commit --amend
  p = push
  pf = push --force-with-lease
  a = add
  c1 = clone --depth 1 --single-branch
  f = flow feature
  l = log -p
  ll = log --no-merges
  align = !BASE_BRANCH=${1:-develop} && git fetch origin $BASE_BRANCH && git rebase origin/$BASE_BRANCH && :
  edit = "!vim $(git ls-files -m --other --exclude-standard)"
